{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "CeiliDb": "Server=tcp:{HOST},1433;Initial Catalog={DB};Persist Security Info=False;User ID={USER};Password={PAAA};MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
    },
    "AzureAI": {
        "Endpoint": "{AZURE_DOMAIN_DOT_COM/}openai/deployments/gpt-4o-mini",
        "ApiKey": "{APIKEY}",
        "Model": "gpt-4o-mini"
    },
    "Jwt": {
        "Key": "{BASE64_ENCODED_KEY}",
        "Issuer": "{ANYNAME}",
        "Audience": "{ANYNAME}"
    },
    "Smtp": {
        "Host": "{HOST_SMTP}",
        "Port": 587,
        "User": "{EMAIL}",
        "Password": "{PAAA}"
    },
    "PasswordReset": {
        //"FrontendUrl": "{HTTPS_DOMAIN}/reset-password"
        "FrontendUrl": "http://localhost:4200/reset-password"
    }
}
